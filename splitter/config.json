{
  "_comment": "Auto Splitter Config - Tất cả paths relative to project root",
  
  "input_base_dir": "raw_txt",
  "output_base_dir": "",
  "tracking_file": "auto_splitter_history.json",
  
  "run_settings": {
    "dry_run": false,
    "auto_process_missing": false,
    "force_reprocess": false,
    "show_progress": true,
    "_help": "dry_run=preview only | auto_process_missing=chỉ xử lý mới | force_reprocess=xử lý lại tất cả"
  },
  
  "content_types": {
    "WebNovel": {
      "input_subdir": "WebNovel", 
      "output_subdir": "WebNovel",
      "context_chars": 50000,
      "description": "Web Novel CN - 1 chương/segment"
    },
    "LightNovel": {
      "input_subdir": "LightNovel",
      "output_subdir": "LightNovel",
      "context_chars": 50000,
      "description": "Light Novel JP - 1 chương/segment"
    }
  },
  
  "modes": {
    "context_mode": {
      "enabled": true,
      "suffix": "context",
      "mode": "1"
    }
  },
  
  "global_settings": {
    "max_chapter": 5000,
    "output_format": "yaml"
  },
  
  "filters": {
    "exclude_folders": ["backup", "temp", ".git"],
    "file_patterns": ["*.txt"],
    "min_file_size_bytes": 100,
    "exclude_files": []
  }
} 