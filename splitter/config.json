{
  "input_base_dir": "markdown_exports",
  "output_base_dir": "inventory/output",
  "tracking_file": "auto_splitter_history.json",

  "split_settings": {
    "enabled": true,
    "segment_chars": 20000,
    "mode": "1",
    "description": "Split into segments for translation"
  },

  "global_settings": {
    "max_chapter": 1000,
    "output_format": "yaml"
  },

  "filters": {
    "file_patterns": ["*.md"],
    "exclude_folders": ["backup", "temp", ".git"],
    "exclude_files": ["V20MMR2.txt"],
    "min_file_size_bytes": 100
  }
}
