{
  "active_task": {
    "task_name": "Dịch văn bản",
    "source_yaml_file": ".yaml"
  },
  
  "retry_log_file": ".log",
  "retry_output_file": ".yaml", 
  
  "translate_api": {
    "provider": "gemini",
    "model": "gemini-2.5-flash",
    "temperature": 1.2,
    "concurrent_requests": 80,
    "max_tokens": 25000,
    "thinking_budget": 1500,
    "delay": 30
  },
  
  "retry_api": {
    "provider": "gemini",
    "model": "gemini-2.5-pro",
    "temperature": 1.3,
    "concurrent_requests": 40,
    "max_tokens": 15000,
    "thinking_budget": 1500,
    "max_retries": 2,
    "delay": 60
  },
  
  "context_api": {
    "provider": "gemini",
    "model": "gemini-2.5-flash",
    "temperature": 0.5,
    "concurrent_requests": 10,
    "max_tokens": 1500,
    "thinking_budget": 0
  },
  
  "paths": {
    "output_trans": "",
    "log_trans": "",
    "context_dir": "",
    "temp_output": "temp",
    "prompt_file": ".txt",
    "title_prompt_file": ".txt",
    "context_prompt_file": ".txt"
  },
  
  "title_api": {
    "provider": "gemini",
    "model": "gemini-2.5-flash",
    "temperature": 1.3,
    "concurrent_requests": 20,
    "max_tokens": 100,
    "thinking_budget": 0,
    "delay": 0
  },
  
  "title_translation": {
    "enabled": false
  },
  
  "filtering": {
    "mode": "chapter",
    "chapter_range": {
      "enabled": true,
      "start_volume": 0,
      "end_volume": 999,
      "start_chapter": 1,
      "end_chapter": 103
    },
    "segment_range": {
      "enabled": false,
      "start_segment": 1,
      "end_segment": 100
    }
  },
  
  "cleaner": {
    "enabled": true,
    "remove_thinking_blocks": false
  },
  
  "batch_processing": {
    "enabled": false,
    "mode": "chapter",
    "chapters_per_batch": 100,
    "create_timestamp_folder": true
  }
}
