{
  "series": [
    {
      "name": "Shuba Novel",
      "parser": "shuba",
      "json_mapping": "crawl_json/no_money_shuba.json",
      "output_file": "data/no_money_shuba.txt",
      "start_chapter": 1,
      "max_chapters": 900,
      "enabled": true
    } 
  ],
  "settings": {
    "headless": true,
    "browser": "edge",
    "timeout": 30000,
    "delay_between_requests": 5,
    "max_retries": 3,
    "retry_delay": 10,
    "resume_mode": true,
    "auto_resume": false,
    "log_dir": "crawl/logs"
  }
} 